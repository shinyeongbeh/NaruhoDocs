{
  "name": "naruhodocs",
  "displayName": "NaruhoDocs",
  "description": "A VSCode extension that could help in documentation writing and reading. ",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "naruhodocs.changeEmbeddingProvider",
        "title": "Change Embedding Model Provider (for document search - RAG)",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.start",
        "title": "Start NaruhoDocs"
      },
      {
        "command": "naruhodocs.createFile",
        "title": "Create File (NaruhoDocs)"
      },
      {
        "command": "naruhodocs.testLLMConnection",
        "title": "Test LLM Connection",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.showProviderStatus",
        "title": "Show Provider Status",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.openModelConfig",
        "title": "Open Model Config",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.visualizeArchitecture",
        "title": "Visualize Architecture",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.visualizeFolderStructure",
        "title": "Visualize Folder Structure",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.visualizeDocRelations",
        "title": "Visualize Document Relations",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.showVisualizationMenu",
        "title": "Show Visualization Menu",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.resetChat",
        "title": "Reset Chat Conversation",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.showLLMStats",
        "title": "Show LLM Usage Stats",
        "category": "NaruhoDocs"
      },
      {
        "command": "naruhodocs.changeProvider",
        "title": "Change LLM Provider",
        "category": "NaruhoDocs"
      }
    ],
    "configuration": {
      "title": "NaruhoDocs",
      "properties": {
        "naruhodocs.llm.provider": {
          "type": "string",
          "enum": [
            "ootb",
            "byok",
            "local"
          ],
          "enumDescriptions": [
            "Out-of-the-box: Use built-in Gemini with daily limits",
            "Bring Your Own Key: Use your own API key for unlimited access",
            "Local LLM: Use local models via Ollama or similar"
          ],
          "default": "ootb",
          "description": "LLM provider option to use"
        },
        "naruhodocs.llm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for BYOK mode (stored securely)",
          "when": "config.naruhodocs.llm.provider == 'byok'"
        },
        "naruhodocs.embedding.provider": {
          "type": "string",
          "enum": [
            "local",
            "cloudHuggingface"
          ],
          "enumDescriptions": [
            "Local (Ollama): Use local embedding models via Ollama",
            "Cloud (Hugging Face Inference Provider): Use HuggingFace cloud embeddings"
          ],
          "default": "local"
        },
         "naruhodocs.huggingface.apiKey": {
          "type": "string",
          "default": "",
          "description": "HuggingFace Inference API key for cloud embeddings."
        },
        "naruhodocs.visualization.defaultLibrary": {
          "type": "string",
          "enum": [
            "mermaid",
            "d3",
            "vis"
          ],
          "enumDescriptions": [
            "Mermaid.js - Simple text-to-diagram conversion",
            "D3.js - Interactive and customizable visualizations",
            "Vis.js - Network diagrams and timelines"
          ],
          "default": "mermaid",
          "description": "Default visualization library to use"
        },
        "naruhodocs.visualization.enableInteractive": {
          "type": "boolean",
          "default": true,
          "description": "Enable interactive visualization features"
        },
        "naruhodocs.visualization.maxFileAnalysis": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of files to analyze for large projects"
        },
        "naruhodocs.logging.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose LLM request/response logging in dedicated output channel"
        },
        "naruhodocs.rag.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable Retrieval-Augmented Generation (RAG) functionality.\n Please reload the window after changing this setting."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "naruhodocs-sidebar",
          "title": "NaruhoDocs",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "naruhodocs-sidebar": [
        {
          "id": "naruhodocs.chatView",
          "type": "webview",
          "name": "NaruhoDocs Chat",
          "icon": "media/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/node-fetch": "^2.6.13",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.35.0",
    "markdownlint": "^0.38.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/genai": "^1.20.0",
    "@langchain/community": "^0.3.56",
    "@langchain/core": "^0.3.77",
    "@langchain/google-genai": "^0.2.18",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/ollama": "^0.2.4",
    "@langchain/openai": "^0.6.13",
    "dotenv": "^16.4.5",
    "langchain": "^0.3.34",
    "markdown-it": "^14.1.0",
    "mermaid": "^11.11.0",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.7",
    "watch": "^1.0.2"
  },
  "overrides": {
    "exec-sh": "^0.3.4"
  }
}
